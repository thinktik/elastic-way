{
  "family": "viper",
  "cpu": "256",
  "memory": "512",
  "requiresCompatibilities": [
    "EC2",
    "FARGATE"
  ],
  "runtimePlatform": {
    "operatingSystemFamily": "LINUX"
  },
  "networkMode": "awsvpc",
  "executionRoleArn": "arn:aws:iam::843245141269:role/PoC_ecs_exec_role",
  "taskRoleArn": "arn:aws:iam::843245141269:role/PoC_ecs_task_role",
  "containerDefinitions": [
    {
      "name": "viper",
      "essential": true,
      "image": "843245141269.dkr.ecr.us-east-1.amazonaws.com/viper:v0.0.1",
      "cpu": 256,
      "memory": 512,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/viper",
          "awslogs-create-group": "true",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "portMappings": [
        {
          "containerPort": 8085,
          "hostPort": 8085,
          "protocol": "tcp"
        }
      ],
      "startTimeout": 180,
      "stopTimeout": 120,
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -s -f http://localhost:8085/ping || exit 1"
        ],
        "startPeriod": 180,
        "interval": 60,
        "timeout": 8,
        "retries": 3
      },
      "environment": [
        {
          "name": "AWS_REGION",
          "value": "us-east-1"
        }
      ]
    }
  ]
}
